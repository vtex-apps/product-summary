{
  "product-summary": {
    "component": "ProductSummaryLegacy",
    "content": {
      "$ref": "app:vtex.product-summary#/definitions/ProductSummary"
    },
    "allowed": ["addon-summary-btn"]
  },
  "product-summary.shelf": {
    "allowed": [
      "product-summary-column",
      "product-summary-attachment-list",
      "product-summary-buy-button",
      "product-summary-description",
      "product-summary-image",
      "product-summary-name",
      "product-summary-price",
      "product-identifier",
      "product-summary-space",
      "product-summary-add-to-list-button",
      "product-rating-inline",
      "product-teaser.summary"
    ],
    "component": "ProductSummaryCustom",
    "composition": "children"
  },
  "product-summary-column": {
    "allowed": [
      "product-summary-attachment-list",
      "product-summary-buy-button",
      "product-summary-description",
      "product-summary-image",
      "product-summary-name",
      "product-summary-price",
      "product-identifier",
      "product-summary-space",
      "product-summary-add-to-list-button",
      "product-rating-inline"
    ],
    "component": "Column",
    "composition": "children"
  },
  "product-summary.unstable--flex": {
    "allowed": [
      "unstable--product-summary-column",
      "product-summary-attachment-list",
      "product-summary-buy-button",
      "product-summary-description",
      "product-summary-image",
      "product-summary-name",
      "product-summary-price",
      "product-summary-space",
      "product-rating-inline"
    ],
    "component": "ProductSummaryCustom",
    "composition": "children"
  },
  "unstable--product-summary-column": {
    "allowed": [
      "product-summary-attachment-list",
      "product-summary-buy-button",
      "product-summary-description",
      "product-summary-image",
      "product-summary-name",
      "product-summary-price",
      "product-summary-space"
    ],
    "component": "Column",
    "composition": "children"
  },
  "product-summary-space": {
    "component": "Spacer"
  },
  "product-summary-attachment-list": {
    "component": "ProductSummaryAttachmentList"
  },
  "product-summary-buy-button": {
    "component": "ProductSummaryBuyButton",
    "content": {
      "properties": {
        "buyButtonText": {
          "$ref": "app:vtex.product-summary#/definitions/ProductSummary/properties/buyButtonText"
        }
      }
    }
  },
  "product-summary-description": {
    "component": "ProductSummaryDescription"
  },
  "product-summary-image": {
    "component": "ProductSummaryImage",
    "content": {
      "properties": {
        "badgeText": {
          "$ref": "app:vtex.product-summary#/definitions/ProductSummary/properties/badgeText"
        }
      }
    }
  },
  "product-summary-name": {
    "component": "ProductSummaryName"
  },
  "product-summary-price": {
    "component": "ProductSummaryPrice",
    "content": {
      "properties": {
        "labelSellingPrice": {
          "$ref": "app:vtex.product-summary#/definitions/ProductSummary/properties/labelSellingPrice"
        },
        "labelListPrice": {
          "$ref": "app:vtex.product-summary#/definitions/ProductSummary/properties/labelListPrice"
        }
      }
    }
  },
  "product-summary-add-to-list-button": {
    "component": "ProductSummaryAddToListButton",
    "allowed": [
      "addon-summary-btn"
    ]
  },
  "addon-summary-btn": {
    "component": "*"
  }
}
